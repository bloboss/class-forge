# Environment Variables Example
# Copy this file to .env and customize for your environment

# Database Configuration
POSTGRES_PASSWORD=fgc_password
FGC_DATABASE_HOST=localhost
FGC_DATABASE_PORT=5432
FGC_DATABASE_NAME=forgejo_classroom
FGC_DATABASE_USER=fgc_user
FGC_DATABASE_PASSWORD=fgc_password

# Redis Configuration
FGC_REDIS_HOST=localhost
FGC_REDIS_PORT=6379
FGC_REDIS_PASSWORD=

# Server Configuration
FGC_SERVER_PORT=8080
FGC_SERVER_MODE=debug

# Forgejo Integration
FGC_FORGEJO_BASE_URL=https://your-forgejo-instance.com
FGC_FORGEJO_TOKEN=your-forgejo-api-token

# Authentication
FGC_AUTH_JWT_SECRET=your-jwt-secret-key-change-this

# Docker Compose
POSTGRES_PASSWORD=fgc_password
SERVER_MODE=debug
FORGEJO_BASE_URL=https://your-forgejo-instance.com
FORGEJO_TOKEN=your-forgejo-api-token
JWT_SECRET=your-jwt-secret-key-change-this